<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <!--Deploy: Spring Information-->
    <modelVersion>4.0.0</modelVersion>

    <!--Deploy: Coordinates-->
    <packaging>jar</packaging>
    <groupId>com.huntercodexs</groupId>
    <artifactId>jeasypdf</artifactId>
    <version>1.8.0-SNAPSHOT</version>

    <!--Deploy: ProjectName, Description and URL-->
    <name>jeasypdf</name>
    <description>jeasypdf</description>
    <url>https://github.com/huntercodexs/jeasypdf</url>

    <!--Deploy: License Information-->
    <licenses>
        <license>
            <name>MIT License</name>
            <url>http://www.opensource.org/licenses/mit-license.php</url>
        </license>
    </licenses>

    <!--Deploy: Developer Information-->
    <developers>
        <developer>
            <name>Huntercodexs</name>
            <email>huntercodexs@gmail.com</email>
            <organization>Huntercodexs</organization>
            <organizationUrl>http://www.huntercodexs.com</organizationUrl>
        </developer>
    </developers>

    <!--Deploy: SCM Information-->
    <scm>
        <connection>scm:git:git://github.com/huntercodexs/jeasypdf</connection>
        <developerConnection>scm:git:ssh://github.com:huntercodexs/jeasypdf</developerConnection>
        <url>http://github.com/huntercodexs/jeasypdf/tree/release-1.8.0</url>
    </scm>

    <properties>

        <!--Java Version-->
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>

        <!--Charset Encoding - Optional-->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

    </properties>

    <dependencies>

        <!--COMMONS: IOUtils-->
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>2.16.1</version>
        </dependency>

        <!--PDF: iText-->
        <dependency>
            <groupId>com.itextpdf</groupId>
            <artifactId>bouncy-castle-adapter</artifactId>
            <version>8.0.4</version>
        </dependency>

        <!--PDF: PDFBOX-->
        <dependency>
            <groupId>org.apache.pdfbox</groupId>
            <artifactId>pdfbox</artifactId>
            <version>2.0.0</version>
        </dependency>

        <!--BARCODE/QRCODE-->
        <dependency>
            <groupId>com.google.zxing</groupId>
            <artifactId>core</artifactId>
            <version>3.5.2</version>
        </dependency>
        <dependency>
            <groupId>com.google.zxing</groupId>
            <artifactId>javase</artifactId>
            <version>3.5.2</version>
        </dependency>
        <dependency>
            <groupId>org.krysalis</groupId>
            <artifactId>krysalis-barcode</artifactId>
            <version>1.0beta</version>
        </dependency>
        <dependency>
            <groupId>org.krysalis</groupId>
            <artifactId>krysalis-barcode-fop-ext</artifactId>
            <version>0.20.5-1.0beta</version>
        </dependency>
        <dependency>
            <groupId>com.singingbush</groupId>
            <artifactId>barcode4j</artifactId>
            <version>2.2.4</version>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <!--Build: Generate Final Jar with all dependency-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.2.4</version>
                <configuration>
                    <createDependencyReducedPom>false</createDependencyReducedPom>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <!--Deploy: Distribution on GitHub Packages-->
    <distributionManagement>
        <repository>
            <id>github</id>
            <url>https://maven.pkg.github.com/huntercodexs/jeasypdf</url>
        </repository>
    </distributionManagement>

</project>